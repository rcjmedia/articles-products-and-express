<h2>Edit Article</h2>
{{!-- item --}}
<!-- creates a form a user can use to edit item data -->
<form action="/articles/{{articles.title}}?_method=put" method="post">
  Title: <input type="text" name="title" value="{{articles.title}}"><p>
  Body: <input type="text" name="body" value="{{articles.body}}"><p>
  Author: <input type="text" name="author" value="{{articles.author}}"><p>

  {{!-- <input type="submit" value="EDIT"> --}}
</form> 

<!-- creates a form to delete a specific item -->
<h2>Delete Article</h2>
<form action="/articles/{{articles.title}}?_method=delete" method="post">
  <!-- 'disabled' will prevent the user from editing the ID field -->
  Title: <input type="text" name="name" value="{{articles.title}}" disabled><p>
  <input type="submit" value="DELETE">
</form>